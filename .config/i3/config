set $mod Mod4
floating_modifier $mod

focus_follows_mouse no
workspace_auto_back_and_forth yes

gaps inner 20

assign [class="zoom"] 5

for_window [class=".*"] border none
for_window [class=".*"] floating enable

# class                 border  backgr. text    indicator child_border
client.focused          #dfcca5 #dfcca5 #0b2815 #dfcca5   #dfcca5
client.focused_inactive #a89b9e #a89b9e #0b2815 #a89b9e   #a89b9e
client.unfocused        #a89b9e #a89b9e #0b2815 #a89b9e   #a89b9e
client.urgent           #cc241d #cc241d #0b2815 #cc241d   #cc241d
client.placeholder      #a89b9e #a89b9e #0b2815 #a89b9e   #a89b9e

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+q kill
bindsym Print exec xfce4-screenshooter
bindsym $mod+l exec --no-startup-id dm-tool lock
bindsym $mod+Return exec alacritty
bindsym $mod+d exec /home/nwxnk/.config/polybar/scripts/launcher.sh

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+ntilde move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+c move position center

bindsym XF86MonBrightnessUp exec "brightnessctl s 5%+"
bindsym XF86MonBrightnessDown exec "brightnessctl s 5%-"
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%

bindsym $mod+F1 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym $mod+F2 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

bindsym $mod+Shift+1 move container to workspace number $ws1; workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2; workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3; workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4; workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5; workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6; workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7; workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8; workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9; workspace number $ws9

bindsym $mod+r mode "resize"
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec $HOME/.config/polybar/scripts/powermenu.sh

mode "resize" {
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

exec --no-startup-id picom
exec --no-startup-id nm-applet
exec --no-startup-id xfce4-clipman
exec --no-startup-id xfce4-volumed-pulse
exec --no-startup-id xfce4-power-manager
exec --no-startup-id optimus-manager-qt
exec --no-startup-id hsetroot -solid "#406454"
exec --no-startup-id $HOME/.config/polybar/launch.sh
exec --no-startup-id xrandr --output HDMI-0 --mode 1920x1080 --rate 75 --output eDP-1-1 --off
exec --no-startup-id xinput set-prop "ELAN0511:01 04F3:303F Touchpad" "libinput Tapping Enabled" 1
exec --no-startup-id xinput set-float-prop "ThinkPad Essential Wireless Mouse" "libinput Accel Speed" -0.6
exec --no-startup-id nvidia-settings --assign CurrentMetaMode="nvidia-auto-select +0+0 { ForceCompositionPipeline = On }"